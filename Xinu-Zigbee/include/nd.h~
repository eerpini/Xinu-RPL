/* nd.h - definitions for Neighbor Discovery protocol */

/* ND cache entry states */

#define ND_EMPTY 0

struct ndcache_entry {
	ip6addr		nd_nghbrIP;
	radlongaddr	nd_nghbrMAC64;
	radshrtaddr 	nd_nghbrMAC16;
	netpacket	*nd_pending;	/* for now, just queue one packet */
	struct {
		uint8	nd_isrouter:1;
		uint8	nd_state:4;
	};
	uint8		nd_timer;	/* number of secs to next state */
        /* likely needs fields for number of resolution retries */
	/* likely needs fields for NUD */
}

#define NNDCACHE 16
extern ndcache_entry ndcache[16];

